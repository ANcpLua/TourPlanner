<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
    <DataCollectionRunSettings>
        <DataCollectors>
            <DataCollector friendlyName="XPlat Code Coverage">
                <Configuration>
                    <ExcludeByFile>
                        **/Views/*.cs,
                        **/View/*.cs,
                        **/Program.cs
                    </ExcludeByFile>
                    <ExcludeByAttribute>
                        ExcludeFromCodeCoverage,
                        GeneratedCodeAttribute
                    </ExcludeByAttribute>
                    <Exclude>
                        [*]*.Views.*,
                        [*]*.View,
                        [*]*Window,
                        [*]*Form*,
                        [*]Program
                    </Exclude>
                </Configuration>
            </DataCollector>
        </DataCollectors>
    </DataCollectionRunSettings>
</RunSettings>