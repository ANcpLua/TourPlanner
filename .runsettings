<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
    <DataCollectionRunSettings>
        <DataCollectors>
            <DataCollector friendlyName="XPlat Code Coverage">
                <Configuration>
                    <ExcludeByFile>
                        **/View/**/*.razor,
                        **/View/**/*.razor.cs,
                        **/Views/**/*.razor,
                        **/Views/**/*.razor.cs,
                        **/Program.cs,
                        **/_Imports.razor,
                        **/App.razor
                    </ExcludeByFile>
                    <ExcludeByAttribute>
                        ExcludeFromCodeCoverage,
                        GeneratedCodeAttribute,
                        CompilerGeneratedAttribute
                    </ExcludeByAttribute>
                    <Exclude>
                        [*]*.View.*,
                        [*]*.Views.*,
                        [UI]UI.View.*,
                        [*]*Window,
                        [*]*Form*,
                        [*]Program,
                        [*]*.razor
                    </Exclude>
                </Configuration>
            </DataCollector>
        </DataCollectors>
    </DataCollectionRunSettings>
</RunSettings>